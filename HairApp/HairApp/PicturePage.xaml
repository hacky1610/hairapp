<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="HairApp.PicturePage"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="Transparent">
    <StackLayout Style="{StaticResource Page}" HeightRequest="20">
        <ContentView x:Name="NavigationContainer"/>
        <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:Name="mImageView"></Image>
    </StackLayout>
   
</ContentPage>