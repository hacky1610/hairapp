<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="HairApp.WashDayEditor"
             NavigationPage.HasNavigationBar="false">
    <StackLayout Style="{StaticResource Page}">
        <ContentView x:Name="SaveButtonContainer" />

        <StackLayout Style="{StaticResource PageContent}" >
      
        <Label Text="Define your Care Day"
                Style="{StaticResource Heading}" />
        <ScrollView>
            <StackLayout>
                <Frame Style="{StaticResource FrameStyle}">
                        <StackLayout>
                            <Entry x:Name="WashDayNameEntry"/>
                            <Button x:Name="AddDescription" Text="Add description" Style="{StaticResource AddDescriptionButton}"/>
                            <Editor x:Name="Description" HeightRequest="150" Style="{StaticResource DescriptiontSection}"/>
                        </StackLayout>
                </Frame>
                <Frame Style="{StaticResource FrameStyle}">
                    <StackLayout Orientation="Vertical">
                    <Label Text="Schedule"></Label>
                        <DatePicker x:Name="StartDatePicker"></DatePicker>
                    <StackLayout Orientation="Horizontal">
                        <Label>Every</Label>
                                <Picker  x:Name="mEntryWeeklyPeriod"  Style="{StaticResource PeriodPicker}"></Picker>
                        <Label>Weeks</Label>
                    </StackLayout>
                    <FlexLayout Wrap="Wrap"
                        JustifyContent="SpaceAround"  >
                        <controls:CheckBox Checked="False" DefaultText="Monday" x:Name="mCheckBoxMonday"></controls:CheckBox>
                        <controls:CheckBox Checked="False" DefaultText="Tuesday" x:Name="mCheckBoxTuesday"></controls:CheckBox>
                        <controls:CheckBox Checked="False" DefaultText="Wednesday" x:Name="mCheckBoxWednesday"></controls:CheckBox>
                        <controls:CheckBox Checked="False" DefaultText="Thursday" x:Name="mCheckBoxThursday"></controls:CheckBox>
                        <controls:CheckBox Checked="False" DefaultText="Friday" x:Name="mCheckBoxFriday"></controls:CheckBox>
                        <controls:CheckBox Checked="False" DefaultText="Saturday" x:Name="mCheckBoxSaturday"></controls:CheckBox>
                        <controls:CheckBox Checked="False" DefaultText="Sunday" x:Name="mCheckBoxSunday"></controls:CheckBox>
                    </FlexLayout>
                </StackLayout>
                </Frame>

                <Frame Style="{StaticResource FrameStyle}">
                    <StackLayout Orientation="Vertical">
                        <Label Text="Routines"></Label>
                        <StackLayout x:Name="RoutineList">
                        </StackLayout>
                        <Button Text="Add routine" x:Name="AddRoutine"/>
                    </StackLayout>
                </Frame>

            

            </StackLayout>
        </ScrollView>
       
    </StackLayout>
    </StackLayout>
</ContentPage>