<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairApp.WashDayInstance"
             NavigationPage.HasNavigationBar="false">
    <StackLayout Style="{StaticResource Page}">
        <ContentView x:Name="SaveButtonContainer"/>
        <ScrollView Style="{StaticResource ScrollPageContent}">        
            <StackLayout Style="{StaticResource PageContent}" >

            <Label Text="Do you care day"
                Style="{StaticResource Heading}" />
            <Label x:Name="Description"
                Style="{StaticResource InstanceDescription}" />
            <StackLayout x:Name="RoutineList">
            </StackLayout>
        </StackLayout>
        </ScrollView>

    </StackLayout>
 
</ContentPage>