<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairApp.IntroPage"
             NavigationPage.HasNavigationBar="false">
    <StackLayout Style="{StaticResource Page}">
        <StackLayout Style="{StaticResource PageContent}">

            <Label Text="Wellcome to Vals Hair App"
                Style="{StaticResource Heading}" />
            <Image x:Name="ValsImage" Source="intro.png"></Image>
            <Label>The first thing you have to do, is to create a care day</Label>
            <Button Text="Clich here to create a care day" x:Name="AddWashday"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>