<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairApp.WashDayOverview"
             NavigationPage.HasNavigationBar="false">
    <StackLayout>
        <ContentView x:Name="NavigationContainer"/>
        <StackLayout Style="{StaticResource PageContent}">

            <Label Text="All Care days"
                Style="{StaticResource Heading}" />
            <StackLayout x:Name="Washdaylist">
            </StackLayout>
            <Button Text="Add washday" x:Name="AddWashday"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>