<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HairApp"
             x:Class="HairApp.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label x:Name="TimeToNextCareDay" Text="" 
           HorizontalOptions="Center"/>
        <Button Text="ShowLog" x:Name="ShowLog"/>

        <Button Text="Init" x:Name="Init"/>
        <Button Text="Init Alarms" x:Name="InitAlarms"/>

        <StackLayout HeightRequest="120">
            <ImageButton  x:Name="ChangeScreen"/>
            <ImageButton  x:Name="OpenWashDayOverview"  />

        </StackLayout>
    </StackLayout>

</ContentPage>
