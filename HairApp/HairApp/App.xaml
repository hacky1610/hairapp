<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="PageContent" TargetType="StackLayout">
                <Setter Property="Padding" Value="20,20,20,20" />
                <Setter Property="BackgroundColor" Value="LightGray" />
            </Style>

            <Style x:Key="Heading" TargetType="Label">
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>
            
            <!--Routine-->
            <Style x:Key="RoutineFrame" TargetType="Frame">
                <Setter Property="CornerRadius" Value="3" />
                <Setter Property="Padding" Value="0,0,0,0" />
                <Setter Property="HorizontalOptions" Value="Fill" />

            </Style>

            <Style x:Key="RoutineContent" TargetType="Frame">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="Padding" Value="15, 5, 10, 5" />
            </Style>

            <Style x:Key="RoutineButton" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="HeightRequest" Value="20" />
            </Style>

            <Style x:Key="AddRoutineList" TargetType="StackLayout">
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            

            <!--Frame-->
            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="OutlineColor" Value="White" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="5,5,5,5" />
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>